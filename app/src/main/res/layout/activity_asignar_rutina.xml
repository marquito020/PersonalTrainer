<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cuerpocompleto">

    <!-- Botón transparente para la zona del pecho -->

    <!-- Botón transparente para la zona de las piernas -->

    <!-- Botón transparente para la zona de los brazos -->

    <Button
        android:id="@+id/btnArribaAdelante"
        android:layout_width="114dp"
        android:layout_height="120dp"
        android:layout_marginTop="208dp"
        android:background="@android:color/transparent"
        android:contentDescription="Entrenar Pecho"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="64dp" />

    <Button
        android:id="@+id/btnArribaAtras"
        android:layout_width="114dp"
        android:layout_height="120dp"
        android:background="@android:color/transparent"
        android:contentDescription="Entrenar Pecho"
        app:layout_constraintBottom_toTopOf="@+id/btnAbajoAdelante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

    <Button
        android:id="@+id/btnAbajoAdelante"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:background="@android:color/transparent"
        android:contentDescription="Entrenar Piernas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/btnAbajoAtras"
        android:layout_width="wrap_content"
        android:layout_height="333dp"
        android:background="@android:color/transparent"
        android:contentDescription="Entrenar Brazos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="353dp" />

    <!-- Aquí puedes agregar más botones según las zonas del cuerpo -->

</androidx.constraintlayout.widget.ConstraintLayout>
